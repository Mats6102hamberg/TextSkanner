datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model DiaryEntry {
  id             String   @id @default(cuid())
  text           String?
  originalText   String?
  clarifiedText  String?
  storyText      String?
  imageUrl       String?
  entryDate      DateTime? // Datum från dagboken (AI-detekterat)
  detectedMood   String?   // Känsla: "glad", "ledsen", "stressad", etc.
  moodScore      Float?    // -1.0 (negativ) till 1.0 (positiv)
  tags           String[]  // Teman: ["arbete", "familj", "hälsa"]
  summary        String?   // AI-genererad sammanfattning
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt
}

model ContractDocument {
  id        String   @id @default(cuid())
  createdAt DateTime @default(now())
  title     String?
  rawText   String
  language  String
  analyses  ContractAnalysis[]
}

model ContractAnalysis {
  id         String           @id @default(cuid())
  createdAt  DateTime         @default(now())
  document   ContractDocument @relation(fields: [documentId], references: [id])
  documentId String
  overallRisk String
  resultJson Json
}

model MemoryBookChapter {
  id              String   @id @default(cuid())
  title           String
  content         String   // Fullständig kapiteltext
  summary         String?  // Kort sammanfattning
  tags            String[] // Teman från dagboksinlägg
  sourceEntryIds  String[] // IDs till DiaryEntry som ingår
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
}

model FamilyEntityDraft {
  id              String   @id @default(cuid())
  sourceEntryIds  String[] // IDs till DiaryEntry som analyserats
  entities        Json     // ExtractedEntities (persons, places, dates, events, relationships)
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
}
